# Auto detect text files and perform LF normalization
* text=auto

# TypeScript files
*.ts text eol=lf
*.tsx text eol=lf

# JSON files
*.json text eol=lf

# Markdown files
*.md text eol=lf

# Package files
package.json text eol=lf
package-lock.json text eol=lf

# Config files
*.config.js text eol=lf
tsconfig.json text eol=lf
